<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    tools:context=".github.GithubActivity">

    <Button
        android:id="@+id/btn_github_search"
        style="@style/btn"
        android:layout_marginTop="200pt"
        android:text="搜索"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/et_github"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="50pt"
        android:hint="请输入用户名"
        android:text="pokerfaceCmy"
        android:textSize="55pt"
        app:layout_constraintBottom_toBottomOf="@+id/btn_github_search"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/btn_github_search"
        app:layout_constraintTop_toTopOf="@+id/btn_github_search" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/iv_github_avatar"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="200pt"
        android:scaleType="centerCrop"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_github" />

    <TextView
        android:id="@+id/tv_github_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30pt"
        android:textSize="25pt"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/iv_github_avatar" />

</androidx.constraintlayout.widget.ConstraintLayout>